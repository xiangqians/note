<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.xiangqian.note.mapper.UserMapper">

    <insert id="add" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO `user`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">`name`,</if>
            <if test="nickname != null">`nickname`,</if>
            <if test="passwd != null">`passwd`,</if>
            <if test="locked != null">`locked`,</if>
            <if test="deny != null">`deny`,</if>
            <if test="history != null">`history`,</if>
            <if test="addTime != null">add_time,</if>
            <if test="updTime != null">upd_time,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="nickname != null">#{nickname},</if>
            <if test="passwd != null">#{passwd},</if>
            <if test="locked != null">#{locked},</if>
            <if test="deny != null">#{deny},</if>
            <if test="history != null">#{history},</if>
            <if test="addTime != null">#{addTime},</if>
            <if test="updTime != null">#{updTime},</if>
        </trim>
    </insert>

    <delete id="delById">
        DELETE FROM `user` WHERE `id` = #{id}
    </delete>

    <update id="updById">
        UPDATE `user`
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">`name` = #{name},</if>
            <if test="nickname != null">`nickname` = #{nickname},</if>
            <if test="passwd != null">`passwd` = #{passwd},</if>
            <if test="locked != null">`locked` = #{locked},</if>
            <if test="deny != null">`deny` = #{deny},</if>
            <if test="history != null">`history` = #{history},</if>
            <if test="addTime != null">add_time = #{addTime},</if>
            <if test="updTime != null">upd_time = #{updTime},</if>
        </trim>
        WHERE `id` = #{id}
    </update>

    <sql id="columns">
        u.`id`, u.`name`, u.`nickname`, u.`passwd`, u.`locked`, u.`deny`, u.`history`, u.`add_time`, u.`upd_time`
    </sql>

    <select id="getById" resultType="org.xiangqian.note.entity.UserEntity">
        SELECT <include refid="columns"></include>
        FROM `user` u
        WHERE `id` = #{id}
    </select>

    <select id="getByName" resultType="org.xiangqian.note.entity.UserEntity">
        SELECT <include refid="columns"></include>
        FROM `user` u
        WHERE `name` = #{name}
        LIMIT 1
    </select>

</mapper>
